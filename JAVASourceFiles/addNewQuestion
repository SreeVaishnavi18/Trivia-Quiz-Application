    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton2ActionPerformed
        // TODO add your handling code here:
        String id=jTextField7.getText();
        String name=jTextField6.getText();
        String opt1 = jTextField1.getText();
        String opt2 = jTextField2.getText();
        String opt3 = jTextField3.getText();
        String opt4 = jTextField4.getText();
        String answer = jTextField5.getText();
        try
        {
            //Connection con=ConnectionProvider.getCon();
            Class.forName("com.mysql.cj.jdbc.Driver");
            Connection con = (Connection) DriverManager.getConnection("jdbc:mysql://localhost/QEMS","root","");
            PreparedStatement ps=con.prepareStatement("insert into question values(?,?,?,?,?,?,?)");
            ps.setString(1,id);
            ps.setString(2,name);
            ps.setString(3,opt1);
            ps.setString(4,opt2);
            ps.setString(5,opt3);
            ps.setString(6,opt4);
            ps.setString(7,answer);
            ps.executeUpdate();
            JFrame jf=new JFrame ();
            jf.setAlwaysOnTop(true);
            JOptionPane.showMessageDialog(jf, "Succesfully Updated");
            setVisible(false);
            new addNewQuestion().setVisible(true);
       
        }
        catch(Exception e)
        {
            JFrame jf=new JFrame ();
            jf.setAlwaysOnTop(true);
            JOptionPane.showMessageDialog(jf, e);
        }
        
    }//GEN-LAST:event_jButton2ActionPerformed

